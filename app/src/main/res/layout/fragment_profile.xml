<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sai.udstore.Main.Fragment.ProfileFragment">

    <ProgressBar
        android:id="@+id/fp_pb_loading"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/fp_ll_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/fp_iv_"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/user_profile_image_size"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/back_header_nav"
                        android:src="@drawable/ic_user" />

                    <TextView
                        android:id="@+id/fp_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/profile_text"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_large"
                        android:layout_marginTop="@dimen/padding_large"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fp_tv_credit_str"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_large"
                            android:text="@string/etebar"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fp_tv_credit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100.256.000 ریال"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_large"
                        android:layout_marginTop="@dimen/padding_large"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fp_tv_off_str"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_large"
                            android:text="@string/off"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_xlarge" />

                        <TextView
                            android:id="@+id/fp_tv_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 درصد"
                            android:textColor="@color/back_blue"
                            android:textSize="@dimen/text_size_xlarge" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/padding_large"
                        android:layout_marginRight="@dimen/padding_large"
                        android:layout_marginTop="@dimen/padding_normal"
                        android:background="@color/blue" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_large"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Space style="@style/SpaceStyleProfile" />

                    <Button
                        android:id="@+id/fp_btn_download"
                        style="@style/ButtonStyleProfile"
                        android:text="@string/download"
                        android:visibility="gone" />

                    <Space style="@style/SpaceStyleProfile" />

                    <Button
                        android:id="@+id/fp_btn_exit"
                        style="@style/ButtonStyleProfile"
                        android:text="خروج" />

                    <Space style="@style/SpaceStyleProfile" />

                    <Button
                        android:id="@+id/fp_btn_orders"
                        style="@style/ButtonStyleProfile"
                        android:text="سفارش ها" />

                    <Space style="@style/SpaceStyleProfile" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</FrameLayout>
