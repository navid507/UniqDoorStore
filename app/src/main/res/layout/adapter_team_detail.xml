<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/asd_name"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="2dp"
        android:background="@color/jik_red"
        android:gravity="center"
        android:padding="5dp"
        android:text="میثم صحرایی"
        android:textColor="#fff"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#6000"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/asd_image"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:padding="10dp" />

        <TextView
            android:id="@+id/asd_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:text="میثم متولد 68 می باشد که از سال 90 با فلاور همکاری می کند"
            android:textColor="#fff" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/asd_certi_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="سوابق و مدارک"
                android:textColor="#000"
                android:textSize="20dp" />

            <ListView
                android:id="@+id/asd_certfi_lv"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginRight="20dp"
                android:maxHeight="144dp"
                android:minHeight="96dp" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>