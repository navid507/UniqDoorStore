<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="218dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:background="@color/back_gray_list"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/fti_iv_image"
            android:layout_width="@dimen/tour_list_width"
            android:layout_height="@dimen/tour_list_height"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/fti_tv_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:lines="2"
            android:padding="@dimen/padding_small"
            android:text="مقطع استیل ضد "
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/fti_tv_price"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="22.250.000 ریال"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/green"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="افزودن به سبد "
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>
