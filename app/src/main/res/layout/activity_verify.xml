<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main.Register.VerifyActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_normal">


        <TextView
            android:id="@+id/av_tv_title_verify"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:background="@color/jik_red"
            android:gravity="center"
            android:text="تایید ثبت نام"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textStyle="bold"
             />

        <ProgressBar
            android:id="@+id/av_pb_verify"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/logo_au"
        android:layout_height="@dimen/logo_au"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/av_tv_title_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_normal"
        android:gravity="center"
        android:text="@string/title_app"
        android:textColor="@color/gray_teb"
        android:textSize="@dimen/text_size_xlarge"
         />

    <TextView
        android:id="@+id/av_tv_title_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="سپهر آذین"
        android:textAlignment="center"
        android:textColor="@color/gray_teb"
        android:textSize="@dimen/text_size_large"
        />


    <TextView
        android:id="@+id/av_tv_title_code_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"
        android:text="کد تایید دریافتی"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
         />

    <EditText
        android:id="@+id/av_tv_code_verify"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:hint="کد تایید"
        android:imeActionLabel="ارسال"
        android:imeOptions="actionUnspecified"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_teb"
        android:textSize="@dimen/text_size_large" />

    <Button
        android:id="@+id/av_btn_verify"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        android:text="ارسال"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <Button
        android:id="@+id/av_btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:text="تصحیح شماره تلفن همراه"
        android:textColor="@color/gray_teb"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold" />


</LinearLayout>
