<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".Main.Register.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_normal">

            <ProgressBar
                android:id="@+id/ar_pb_register"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/logo_au"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:src="@drawable/logo" />


        <TextView
            android:id="@+id/fa_tv_title_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="ورود به سیستم"
            android:textColor="@color/blue"
            android:textSize="34dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/ar_iv_username"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_login"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ar_tv_username_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_toRightOf="@+id/ar_iv_username"
                android:text="نام کاربری:"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ar_et_username"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:imeActionLabel="ثبت"
                android:imeOptions="actionUnspecified"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_teb"
                android:textDirection="ltr"
                android:textSize="@dimen/text_size_large" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large">

            <ImageView
                android:id="@+id/ar_iv_password"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_small"
                android:layout_marginRight="@dimen/padding_normal"
                android:src="@drawable/ic_pass"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ar_tv_pass_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/padding_normal"
                android:text="رمز عبور:"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ar_et_pass_register"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:imeActionLabel="@string/login"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_teb"
                android:textDirection="ltr"
                android:textSize="@dimen/text_size_large" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/ar_pb"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <Button
            android:id="@+id/ar_btn_register"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@color/blue"
            android:text="تایید"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold" />


    </LinearLayout>

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/namad" />

    <include layout="@layout/footer" />

</LinearLayout>
