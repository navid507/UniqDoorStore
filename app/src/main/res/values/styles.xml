<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentSecondary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorForeground">@color/back_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/black</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="splashActivity">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentSecondary</item>
    </style>

    <style name="listviewstyle">
        <item name="android:layout_marginRight">@dimen/lv_marginrl</item>
        <item name="android:layout_marginLeft">@dimen/lv_marginrl</item>
        <item name="android:layout_marginTop">@dimen/lv_margintop</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">@dimen/lv_margintop</item>
    </style>

    <style name="imagestyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">@dimen/img_logo</item>
        <item name="android:layout_height">@dimen/img_logo</item>
        <item name="android:background">@drawable/rectproduct</item>
    </style>

    <style name="textstyle">
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextStyleProductTitle" parent="TextStyleProduct">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleProduct">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_marginLeft">@dimen/padding_normal</item>
        <item name="android:layout_marginRight">@dimen/padding_normal</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="JIKTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/title_app</item>
        <item name="android:textSize">@dimen/text_size_header2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/jik_red</item>
    </style>


    <style name="profileTexts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="profileTextsStr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="contact_us_left_icons">
        <item name="android:layout_width">@dimen/contact_us_height</item>
        <item name="android:layout_height">@dimen/contact_us_height</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:background">@color/jik_red</item>
    </style>

    <style name="orderTexts">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SpaceStyleProfile">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">4dp</item>
    </style>
    <style name="ButtonStyleProfile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/blue</item>
       <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>

    </style>

</resources>
